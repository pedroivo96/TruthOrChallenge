<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.PlayersActivity"
    android:padding="@dimen/activity_internal_padding"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/primaryColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:orientation="vertical"
        android:id="@+id/layoutExistPlayers">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/playersListView"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/layoutNoExistPlayers">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Não há jogadores!"
            android:textAlignment="center"
            android:textColor="@color/primaryTextColor"/>

    </LinearLayout>

</LinearLayout>